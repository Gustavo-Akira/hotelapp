<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.gustavoakira.hotel">

    <application
        android:name=".HotelApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hotel"
        android:fullBackupContent="@xml/config_backup"
        >
        <provider
            android:name=".repository.sqlite.HotelProvider"
            android:authorities="com.gustavoakira.hotel"
            android:enabled="true"
            android:exported="true"></provider>

        <activity android:name=".common.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".details.HotelDetailsActivity"
            android:parentActivityName=".common.MainActivity"></activity>
    </application>

</manifest>